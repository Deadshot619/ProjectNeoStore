<?xml version="1.0" encoding="utf-8"?>
<layout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools">
    <data>
        <variable
                name="productDetailViewModel"
                type="com.deadshot.android.projectneostore.ui.productDetail.ProductDetailViewModel"/>

        <variable
                name="property"
                type="com.deadshot.android.projectneostore.models.ProductDetail"/>
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.productDetail.ProductDetailFragment" android:background="#E7E7E7">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent" android:padding="16dp" android:background="#FFFFFF"
                android:id="@+id/constraintLayout">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="6 Seater Family Diner"
                    android:text="@{property.productName}"
                    android:textSize="20sp"
                    android:textColor="#262626"
                    android:textStyle="bold"
                    app:layout_constraintTop_toTopOf="parent"
                    android:id="@+id/tv_product_name" app:layout_constraintStart_toStartOf="parent"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Category - Tables"
                    android:text="@{productDetailViewModel.productCategory}"
                    android:textSize="18sp"
                    android:textColor="#4f4f4f"
                    app:layout_constraintStart_toStartOf="@+id/tv_product_name"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_name" android:id="@+id/tv_product_category"/>
            <TextView
                    tools:text="Future Furniture Center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@{property.producer}"
                    android:textSize="14sp"
                    android:textColor="#4f4f4f"
                    android:id="@+id/tv_product_producer"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_product_category" app:layout_constraintHorizontal_bias="0.5"
                    app:layout_constraintEnd_toStartOf="@+id/rb_product_rating"
                    app:layout_constraintHorizontal_chainStyle="spread_inside"/>

            <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/rb_product_rating"
                    android:stepSize="0.5"
                    android:numStars="5"
                    android:rating="@{property.rating}"
                    tools:style="@android:style/Widget.Material.RatingBar.Small"
                    tools:targetApi="lollipop" android:isIndicator="true"
                    android:focusable="auto" android:clickable="false"
                    style="@android:style/Widget.Material.Light.RatingBar.Small"
                    app:layout_constraintStart_toEndOf="@+id/tv_product_producer"
                    app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/tv_product_producer"
                    app:layout_constraintBottom_toBottomOf="@+id/tv_product_producer"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" android:background="#FFFFFF"
                    android:padding="8dp">

                <TextView
                        android:text="@{productDetailViewModel.productPrice}"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="12000" app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" android:textSize="18sp"
                        android:textColor="@color/colorPrimary" android:id="@+id/tv_price"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toStartOf="@+id/iv_share_btn"
                        app:layout_constraintHorizontal_chainStyle="spread_inside"/>
                <ImageView
                        android:src="@drawable/ic_share_black_24dp"
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:id="@+id/iv_share_btn" app:layout_constraintStart_toEndOf="@+id/tv_price"
                        app:layout_constraintHorizontal_bias="0.5" app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintBottom_toBottomOf="@+id/tv_price"
                        android:contentDescription="@string/cd_share_btn"/>
                <ImageView
                        android:layout_width="250dp"
                        app:imgUrl="@{property.productImages[0].imageUrl}"
                        android:layout_height="250dp" tools:src="@tools:sample/backgrounds/scenic"
                        android:id="@+id/iv_selected_product_image"
                        app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                        app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                        android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_price"
                        android:adjustViewBounds="true" android:contentDescription="@string/cd_product_image"/>
                <androidx.recyclerview.widget.RecyclerView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                        app:layout_constraintTop_toBottomOf="@+id/iv_selected_product_image"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp" app:layout_constraintEnd_toEndOf="parent"
                        android:orientation="horizontal"
                        app:listProductDetailImage="@{productDetailViewModel.properties.productImages}"
                        android:id="@+id/rv_product_images"/>
                <View android:layout_width="match_parent" android:layout_height="1dp"
                      app:layout_constraintTop_toBottomOf="@+id/rv_product_images"
                      android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                      app:layout_constraintEnd_toEndOf="parent"
                      android:background="#C0C0C0" android:id="@+id/view_horizontalLine"/>

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Description" app:layout_constraintTop_toBottomOf="@+id/view_horizontalLine"
                        android:layout_marginTop="16dp" app:layout_constraintStart_toStartOf="parent"
                        android:textSize="18sp" android:textStyle="bold" android:textAllCaps="true"
                        android:textColor="#111111" android:id="@+id/tv_description"
                        android:text="@string/description"/>

                <TextView
                        android:layout_width="match_parent"
                        android:text="@{property.description}"
                        android:layout_height="wrap_content" app:layout_constraintTop_toBottomOf="@+id/tv_description"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginTop="8dp" android:textColor="#333333"
                        android:id="@+id/tv_product_description"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                android:text="@string/btn_buy_now" android:id="@+id/btn_buy_now"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintEnd_toStartOf="@+id/btn_rate"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="16dp" android:textSize="14sp"/>
        <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/btn_rate"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="@+id/btn_buy_now"
                android:layout_marginEnd="16dp" android:id="@+id/btn_rate"
                app:layout_constraintStart_toEndOf="@+id/btn_buy_now" app:layout_constraintHorizontal_bias="0.5"
                android:layout_marginStart="8dp" android:textSize="14sp" app:layout_constraintTop_toTopOf="@+id/btn_buy_now"
        />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>