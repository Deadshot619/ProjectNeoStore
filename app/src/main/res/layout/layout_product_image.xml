<?xml version="1.0" encoding="utf-8"?>

<layout
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:android="http://schemas.android.com/apk/res/android">
    <data>
        <variable
                name="property"
                type="com.deadshot.android.projectneostore.models.ProductImage"/>
    </data>
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="16dp">

        <ImageView
                android:layout_width="80dp"
                android:layout_height="70dp" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/iv_product_image"
                app:imgUrl="@{property.imageUrl}"
                android:contentDescription="@string/cd_product_image"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>